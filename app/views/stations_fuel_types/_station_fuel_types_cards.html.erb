<div data-controller="position" data-position-fuel-type-id-value="<%= fuel_type.id %>" data-position-coords-value="<%= params[:user_lat].present? && params[:user_lng].present? %>" class="container-index" style="width:100vw; height:100vh;">

  <li class="nav-item dropdown">
    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <% fuel_types.each do |fuel_type| %>
        <%= link_to fuel_type.name, stations_fuel_types_path(fuel_type_id: fuel_type.id), class: "dropdown-item" %>
      <% end %>
    </div>
    <h4 class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= fuel_type.name %></h4>
    <%# passamos o elemento da navbar para elemento html %>
  </li>
  <h5 class="text">Prices updated 4 days ago</h5>
  <%#=colocar aqui a data de atualização do ficheiro quando houver API %>

    <div class="card-prevision">
      <div class="card-previson-text">
        <p> The forecast for next week estimates a <strong>decrease</strong> of <strong>5 cents</strong>. Hold on if you can</p>
      </div>
      <div class="little-arrow-box">
        <div id="arrow_down" class="d-flex justify-content-center align-items-center">
          <i class="fa-solid fa-arrow-down-long"></i>
        </div>
      </div>
    </div>

  <!--Button to order by price-->
  <!--Logica:
     1. Cards numa partial com variavel local que é os prices: na 1ª passa o sft_by_price e na 2ª passa o sft_by_distance
     2. dar d-none numa target-data:
      price-list-target classlist: ...
      na outra dar distance-list-target com classlist d-none default.
      -->
     <!--Button to order by price-->

  <!--Vai fazer um render na mesma página, por isso tem de ser ajax??-->
  <div class="d-flex" style="justify-content: space-around">
    <div>
      <button class="btn btn-flat" data-action="click->priceButton#@sft_by_price">Price</button>
    </div>
    <div>
      <button class="btn btn-flat" data-action="click->distanceButton#@sft_by_distance">Distance</button>
    </div>
    <div>
      <button class="btn btn-flat" data-action="#">Smart</button>
      <%#= link_to "Smart", "#", class: "disabled btn btn-flat" %>
    </div>
  </div>

     <%= render 'station_cards', fuel_type: @fuel_type, fuel_types: @fuel_types, stations_fuel_types: @stations_fuel_types %>
</div>
