<div class="container">
  <p><strong>Station Name: </strong><%= @station.name %></p>
  <p><strong>Station Brand: </strong><%= @station.brand %></p>
  <p><strong>Station Address: <strong><%= @station.address %></p>

  <div data-controller="map"
    id="map"
    data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"]%>"
    data-map-marker-value="<%= @marker %>"
    style="width: 100%; height: 300px;">
  </div>

  <p><strong>Station Schedule<strong><%= @station.schedule %></p>
  <p><strong>Station Services<strong><%= @station.services %></p>

  <%= link_to "Back to Stations", stations_path,  class: "btn btn-flat" %>
</div>
