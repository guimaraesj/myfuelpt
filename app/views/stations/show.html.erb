<%= render "shared/navbar" %>
<div class="container">
  <div style="margin-bottom: 20px;">
    <p><strong>Name: </strong><%= @station.name %></p>
    <p><strong>Brand: </strong><%= @station.brand %></p>
    <p><strong>Address: </strong><%= @station.address %></p>
  </div>

  <div data-controller="map"
    id="map"
    data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"]%>"
    data-map-marker-value="<%= @marker %>"
    style="width: 100%; height: 300px;">
  </div>

  <div style="margin-top: 20px;">
    <p><strong>Schedule: </strong><%= @station.schedule %></p>
    <p><strong>Services: </strong><%= @station.services %></p>
  <div>

  <%= link_to stations_fuel_types_path do %>
      <i class="fa-solid fa-chevron-left" style= "color: #5F6265; font-size: 20px; margin: 15px;"></i>
  <% end %>

  <%= link_to "https://www.google.pt/maps" do %>
      <i class="fa-solid fa-diamond-turn-right" style= "color: #5F6265; font-size: 24px; margin: 15px;"></i>
  <% end %>

</div>
