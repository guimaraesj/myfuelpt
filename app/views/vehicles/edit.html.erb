<%= render "shared/navbar" %>
<div class="container">
  <%= simple_form_for(@vehicle, data: { create_vehicle_target: "vehicleForm", action: "submit->create-vehicle#createVehicle" })  do |f| %>
  <%# pode ser o mesmo controlador do create para o edit?? %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :real_consumption %>
    <%#= f.input :fuel_type %>
    <a class="btn" data-action="click->create-vehicle#displayFuelTypeForm">Edit fuel type</a>
    <%= f.submit %>
  <% end %>

  <%= link_to vehicles_path do %>
    <i class="fa-solid fa-chevron-left" style= "color: #5F6265; font-size: 25px; margin: 20px; space-b"></i>
  <% end %>

  <%= link_to vehicle_path data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-regular fa-trash-can" style= "color: #5F6265; font-size: 25px; margin: 20px;"></i>
  <% end %>
</div>
